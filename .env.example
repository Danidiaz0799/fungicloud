# FungiCloud Configuration

# Flask
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
PORT=5000

# Database PostgreSQL
DATABASE_URL=postgresql://postgres:password@localhost:5432/fungicloud

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_STARTER_PRICE_ID=price_...
STRIPE_ADVANCE_PRICE_ID=price_...
STRIPE_EXPERT_PRICE_ID=price_...

# JWT
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_EXPIRATION_HOURS=24

# Frontend
FRONTEND_BASE_URL=http://localhost:4200

# Alertas
ALERT_EMAIL_FROM=alerts@fungicontrol.com
ALERT_CHECK_INTERVAL=300

# SMTP (para alertas por email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
